{
    "manifest_version": 3,
    "name": "blinkr",
    "description": "blinkr is the Chrome Extension that detects eye blink and notify users to prevent their eye dry out.",
    "version": "1.3",
    "icons": {
        "19": "images/19_green_eye.png",
        "36": "images/36_green_eye.png",
        "128": "images/128_green_eye.png"
    },
    "action": {
        "default_popup": "./scripts/popup.html"
    },
    "permissions": [
        "storage",
        "offscreen",
        "tabs",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    }
}